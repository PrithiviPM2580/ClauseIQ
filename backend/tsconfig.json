{
  "compilerOptions": {
    "target": "es2022",
    "types": ["node"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "baseUrl": "./",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "incremental": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/@types"]
  },
  "include": [
    "index.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "test/**/*.ts",
    "jest.config.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
